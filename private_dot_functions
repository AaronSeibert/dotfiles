#if [[ -n "$PS1" ]] && [[ -z "$TMUX" ]] && [[ -n "$SSH_CONNECTION" ]]; then
#  tmux -CC new-session -A -s ssh_tmux
#fi

bw() {
    export BW_SESSION=$(bw-open)
    echo $BW_SESSION >&2
    echo "Running bw with ${@}" >&2
    command bw $@
}

